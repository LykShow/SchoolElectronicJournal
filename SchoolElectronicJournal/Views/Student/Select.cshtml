@model IEnumerable<Lesson>
@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col text-center p-2">No Data</div>
    </div>
}
else
{
    <div>
        @foreach (var p in Model)
        {
            <div class="row p-2">
                <div class="col">@p.Name</div>

                <div class="col"></div>
                <span class="card-text p-1">

                    <a href="~/Grade/List?stid=@ViewBag.StId&lesid=@p.LessonId&userid=@ViewBag.UserId"
                       class="btn btn-success btn-sm pull-right" style="float:right">
                        Select
                    </a>

                </span>
            </div>
        }
    </div>
}
