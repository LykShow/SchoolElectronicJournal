@model IEnumerable<Grade>
<h3 class="p-2 bg-primary text-white text-center">Students</h3>

@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col text-center p-2">No Data</div>
    </div>
}
else
{

        @foreach (Grade p in Model)
        {
            <div class="row p-2">
                <div class="col">@p.Number</div>

                <div class="col"></div>
            </div>

            <span class="card-text p-1">

                <a href="~/Grade/RemoveGrade?id=@p.GradeId&userid=@ViewBag.UserId&class=@ViewBag.ClassId"
                   class="btn btn-success btn-sm pull-right" style="float:right">
                    Remove
                </a>
            </span>


        }

}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col font-weight-bold">Number</div>

        <div class="col"></div>
    </div>
   

    <form asp-action="AddGrade" asp-route-userid="@ViewBag.UserId" asp-route-classid="@ViewBag.ClassId" asp-route-id="@ViewBag.StId" method="post">
        
        <div class="row">

            <div class="col">@Html.TextBox("Number", "", new { type = "number" })</div>

            <div class="col">
                <button name="id" value="@ViewBag.LesStu" type="submit" class="btn btn-primary">Add</button>
            </div>

        </div>
        </form>
        <div class="col">
            <a href="~/Lesson/Select?userid=@ViewBag.UserId&id=@ViewBag.LesId&class=@ViewBag.ClassId" type="submit" class="btn btn-primary">Back</a>
        </div>
</div>