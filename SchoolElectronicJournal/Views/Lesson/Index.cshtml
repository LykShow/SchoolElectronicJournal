@model IEnumerable<Lesson>
<h3 class="p-2 bg-primary text-white text-center">Lessons</h3>

@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col text-center p-2">No Data</div>
    </div>
}
else
{
<div>
    <div>
        <form asp-action="Index" asp-route-id="@ViewBag.UserId" method="get">
            <div class="form-inline form-group">
                <label class="control-label">Name: </label>
                <input type="text" name="SearchString" class="form-control" />


                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div>
        @foreach (Lesson p in Model)
        {
            <div class="row p-2">
                <div class="col">@p.Name</div>


                <div class="col"></div>
            </div>

            <span class="card-text p-1">

                <a href="~/Lesson/Delete?id=@p.LessonId&userid=@ViewBag.UserId"
                   class="btn btn-success btn-sm pull-right" style="float:right">
                    Remove
                </a>
            </span>
            <span class="card-text p-1">

                <a href="~/Student/DetailStudent/@p.LessonId"
                   class="btn btn-success btn-sm pull-right" style="float:right">
                    Detail
                </a>
            </span>
            <span class="card-text p-1">

                <a href="~/Lesson/Select?id=@p.LessonId&userid=@ViewBag.UserId"
                   class="btn btn-success btn-sm pull-right" style="float:right">
                    Select
                </a>
            </span>
            <span class="card-text p-1">

                <a href="~/Lesson/Edit?id=@p.LessonId&userid=@ViewBag.UserId"
                   class="btn btn-success btn-sm pull-right" style="float:right">
                    Edit
                </a>
            </span>

        }
    </div>
</div>
}
<div class="col">
    <a href="~/Lesson/Create?id=@ViewBag.UserId" type="submit" class="btn btn-primary">Add</a>
</div>
<div class="col">
    <a href="~/Home/List" type="submit" class="btn btn-primary">Back</a>
</div>